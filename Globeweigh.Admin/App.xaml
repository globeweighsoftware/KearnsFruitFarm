<Application x:Class="Globeweigh.Admin.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:admin="clr-namespace:Globeweigh.Admin" StartupUri="MainWindow.xaml"
             mc:Ignorable="d">
    <Application.Resources>

        <ResourceDictionary>
            <admin:ViewModelLocator x:Key="Locator" d:IsDataSource="True"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/MetroResources.xaml" />
                <ResourceDictionary Source="Resources/ApplicationDefaults.xaml"/>
                <ResourceDictionary Source="Resources/CommonColours.xaml"/>
                <ResourceDictionary Source="Resources/ElementStyles.xaml"/>
                <ResourceDictionary Source="Resources/GridControlResources.xaml"/>
                <!--<ResourceDictionary Source="pack://application:,,,/Globeweigh.UI.Shared;component/ResourceDictionaries/SharedElementStyles.xaml"/>-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
